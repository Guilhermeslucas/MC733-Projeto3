# ####################################################
# TLM peripheral with TLM interface (ArchC 2x compliant)
# ####################################################

TARGET=peripheral

SRCS := peripheral.cpp
OBJS := $(SRCS:.cpp=.o)
#------------------------------------------------------
.SILENT:
#------------------------------------------------------
.SUFFIXES: .cc .cpp .o
#------------------------------------------------------
lib: all
	ar r lib$(TARGET).a $(OBJS)
#------------------------------------------------------
all: $(OBJS) peripheral.h
#------------------------------------------------------
clean:
	rm -f $(OBJS) *~ *.o *.a
#------------------------------------------------------
distclean: clean
#------------------------------------------------------
.cpp.o:
	$(CC) $(CFLAGS) $(INC_DIR) -I/home/ec2014/ra155618/gmp/6.1.2/include/ -c $< -L/home/ec2014/ra155618/gmp/6.1.2/lib/ -lgmp -lgmpxx
#------------------------------------------------------
.cc.o:
	$(CC) $(CFLAGS) $(INC_DIR) -I/home/ec2014/ra155618/gmp/6.1.2/include/ -c $< -L/home/ec2014/ra155618/gmp/6.1.2/lib/ -lgmp -lgmpxx
